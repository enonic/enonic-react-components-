{ // https://www.typescriptlang.org/tsconfig
	"compilerOptions": {
		//──────────────────────────────────────────────────────────────────────
		// Type Checking
		//──────────────────────────────────────────────────────────────────────
		"strictNullChecks": true,

		//──────────────────────────────────────────────────────────────────────
		// Modules
		//──────────────────────────────────────────────────────────────────────
		"allowUmdGlobalAccess": true,
		"baseUrl": "./",
		"paths": {
			"/lib/xp/*": ["node_modules/@enonic-types/lib-*"],
		},
		"typeRoots": [
			"node_modules/@types",
			"node_modules/@enonic-types"
		],

		//──────────────────────────────────────────────────────────────────────
		// Emit
		//──────────────────────────────────────────────────────────────────────
		"declaration": true,
		"declarationDir": "types",

		//──────────────────────────────────────────────────────────────────────
		// Language and Environment
		//──────────────────────────────────────────────────────────────────────
		"jsx": "preserve",
	},
	"include": [
		"index.ts"
	]
}
